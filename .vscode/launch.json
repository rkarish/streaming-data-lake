{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mock Data Generator",
      "type": "debugpy",
      "request": "launch",
      "module": "src.generator",
      "cwd": "${workspaceFolder}/mock-data-gen",
      "env": {
        "KAFKA_BOOTSTRAP_SERVERS": "localhost:29092",
        "EVENTS_PER_SECOND": "30",
        "TOPIC_BID_REQUESTS": "bid-requests",
        "TOPIC_BID_RESPONSES": "bid-responses",
        "TOPIC_IMPRESSIONS": "impressions",
        "TOPIC_CLICKS": "clicks",
        "BID_RESPONSE_RATE": "0.60",
        "WIN_RATE": "0.15",
        "CLICK_RATE": "0.05"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Mock Data Generator (1h Backfill)",
      "type": "debugpy",
      "request": "launch",
      "module": "src.generator",
      "cwd": "${workspaceFolder}/mock-data-gen",
      "env": {
        "KAFKA_BOOTSTRAP_SERVERS": "localhost:29092",
        "EVENTS_PER_SECOND": "10",
        "TOPIC_BID_REQUESTS": "bid-requests",
        "TOPIC_BID_RESPONSES": "bid-responses",
        "TOPIC_IMPRESSIONS": "impressions",
        "TOPIC_CLICKS": "clicks",
        "BID_RESPONSE_RATE": "0.60",
        "WIN_RATE": "0.15",
        "CLICK_RATE": "0.05",
        "BACKFILL_HOURS": "1"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Mock Data Generator (2h Backfill)",
      "type": "debugpy",
      "request": "launch",
      "module": "src.generator",
      "cwd": "${workspaceFolder}/mock-data-gen",
      "env": {
        "KAFKA_BOOTSTRAP_SERVERS": "localhost:29092",
        "EVENTS_PER_SECOND": "10",
        "TOPIC_BID_REQUESTS": "bid-requests",
        "TOPIC_BID_RESPONSES": "bid-responses",
        "TOPIC_IMPRESSIONS": "impressions",
        "TOPIC_CLICKS": "clicks",
        "BID_RESPONSE_RATE": "0.60",
        "WIN_RATE": "0.15",
        "CLICK_RATE": "0.05",
        "BACKFILL_HOURS": "2"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Superset Setup Dashboards (Remote)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/superset",
          "remoteRoot": "/app"
        }
      ],
      "preLaunchTask": "superset-debug-script"
    }
  ]
}
